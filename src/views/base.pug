doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{pageTitle} | #{siteName}
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
  body 
    header
      nav 
        ul
          li 
            a(href="/") Home 
          li 
            a(href=`${routes.video}${routes.upload}`) Upload Video

          if(!isLoggedIn)
            li 
              a(href=`${routes.join}`) Join
            li 
              a(href=`${routes.login}`) Login
          else
            li 
              a(href=`${routes.logout}`) Logout
          
      div 
        form(method="GET" action=routes.search)
          input(type="text" name="keyword" placeholder="비디오 검색" )
          button(type="submit") 검색 
    main
      block content
    include partials/footer