extends ../base
block content
  .form-container.inner
    h2 회원가입
    .err-msg=errMsg
    form#profileForm(method="POST")
      input(type="email" name="email" placeholder="이메일을 입력해주세요." required)
      input(type="password" name="password" placeholder="암호를 입력해주세요." required)
      input(type="password" name="password2" placeholder="암호를 다시 한번 입력해주세요." required)
      input(type="text" name="displayName" placeholder="닉네임을 입력해주세요." )
      button(type="submit") 회원가입

block scripts
  script(src="/static/js/join.js") 