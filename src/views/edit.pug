extends base
block content
  h1 edit #{video.id}
  form(method="POST")
    input(type="text", name="title" placeholder="제목을 입력해주세요." value=video.title)
    input(type="text", name="description" placeholder="설명을 입력해주세요." value=video.description)
    input(type="text" name="hashtags" placeholder="해쉬태그를 입력해주세요." value=video.hashtags.join())
    button(type="submit") Upload